<UserControl
    x:Class="avalonia.kvexplorer.Views.Pages.SettingsPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:avalonia.kvexplorer.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:SettingsPageViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:SettingsPageViewModel />
    </Design.DataContext>

    <ScrollViewer>

        <StackPanel Margin="10">


            <TextBlock FontWeight="ExtraBold">User Information</TextBlock>
            <TextBlock Text="{Binding Path=AuthenticatedUserClaims.TenantId, StringFormat='TenantId: {0}'}" />
            <TextBlock>Subscription:</TextBlock>

            <Button Command="{Binding SignInOrRefreshTokenCommand}">Sign In With Microsoft Account</Button>
            <Button Command="{Binding SignOutCommand}">Sign out</Button>

        </StackPanel>
    </ScrollViewer>
</UserControl>
