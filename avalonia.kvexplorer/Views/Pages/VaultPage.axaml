<UserControl
    x:Class="avalonia.kvexplorer.Views.Pages.VaultPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:avalonia.kvexplorer.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:VaultPageViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:VaultPageViewModel />
    </Design.DataContext>
    <Grid
        Margin="10,10,10,10"
        ColumnDefinitions="*, *, *, *"
        RowDefinitions="Auto,*">
        <TextBox
            Grid.Row="0"
            Grid.Column="4"
            Margin="0,0,1,5"
            Text="{Binding SearchQuery, Mode=TwoWay}"
            Watermark="Filter values" />

        <DataGrid
            Name="MyDataGrid"
            Grid.Row="1"
            Grid.ColumnSpan="4"
            MinHeight="500"
            VerticalAlignment="Stretch"
            CanUserReorderColumns="True"
            DoubleTapped="OnDoubleTapped"
            GridLinesVisibility="All"
            HorizontalGridLinesBrush="Red"
            IsReadOnly="True"
            ItemsSource="{Binding SecretList}"
            VerticalScrollBarVisibility="Hidden">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding Name}"
                    Header="Name" />
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding Version}"
                    Header="Version" />
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding VaultUri}"
                    Header="VaultUri" />
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding ContentType}"
                    Header="ContentType" />
            </DataGrid.Columns>
            <DataGrid.Styles>
                <Style Selector="DataGrid DataGridRow:nth-child(2n)">
                    <Setter Property="Background" Value="rgba(148, 148, 148, 0.04)" />
                </Style>
                <Style Selector="DataGridRow">
                    <Setter Property="Height" Value="22" />
                </Style>
            </DataGrid.Styles>
        </DataGrid>

    </Grid>
</UserControl>