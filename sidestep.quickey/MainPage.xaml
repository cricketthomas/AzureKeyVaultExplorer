<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="sidestep.quickey.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:sidestep.quickey.Controls">
    <!--<ContentPage.Content>-->

    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Clicked="OnCounterClicked" Text="Add" />
        <ToolbarItem Clicked="OnCounterClicked" Text="Save" />
    </ContentPage.ToolbarItems>-->


    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Vaults" />
        <MenuBarItem Text="User">
            <MenuFlyoutItem Text="Logout" />
            <MenuFlyoutItem Text="View Tenant" />
        </MenuBarItem>
        <MenuBarItem Text="View">
            <MenuFlyoutItem Text="Refresh" />
            <MenuFlyoutItem Text="Change Theme" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <VerticalStackLayout>
        <Grid
            ColumnDefinitions=".3*,.7*"
            IsVisible="{OnPlatform false,
                                   WinUI=true,
                                   MacCatalyst=true}"
            RowDefinitions="100, Auto, *">

            <StackLayout
                Grid.Row="0"
                Padding="10,0,0,0"
                Orientation="Vertical">

                <Label
                    Grid.Row="0"
                    HorizontalOptions="Start"
                    Text="Filter" />
                <Entry
                    Grid.Row="0"
                    ClearButtonVisibility="WhileEditing"
                    Placeholder="Search" />

                <ScrollView>
                    <CollectionView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="0,10,20,10">
                                    <Frame Padding="10,0,0,0" CornerRadius="6">
                                        <Label FontSize="12" Text="{Binding .}" />
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                        <CollectionView.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>apple-vault</x:String>
                                <x:String>windows-vault</x:String>
                                <x:String>prod-vault</x:String>
                                <x:String>dev-vault</x:String>
                                <x:String>android-vault</x:String>
                                <x:String>walledgarden-vault</x:String>
                                <x:String>mac-vault</x:String>
                            </x:Array>
                        </CollectionView.ItemsSource>
                    </CollectionView>
                </ScrollView>
            </StackLayout>



            <ScrollView
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="1">

                <VerticalStackLayout
                    Padding="30,0"
                    Spacing="25"
                    VerticalOptions="Center">

                    <Image
                        HeightRequest="200"
                        HorizontalOptions="Center"
                        SemanticProperties.Description="Cute dot net bot waving hi to you!"
                        Source="dotnet_bot.png" />

                    <Label
                        FontSize="32"
                        HorizontalOptions="Center"
                        SemanticProperties.HeadingLevel="Level1"
                        Text="Hello, World!" />

                    <Label
                        FontSize="18"
                        HorizontalOptions="Center"
                        SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                        SemanticProperties.HeadingLevel="Level2"
                        Text="Welcome to .NET Multi-platform App UI" />

                    <Button
                        x:Name="CounterBtn"
                        Clicked="OnCounterClicked"
                        HorizontalOptions="Center"
                        SemanticProperties.Hint="Counts the number of times you click"
                        Text="Click me" />
                    <Button
                        x:Name="GoTobtn"
                        Clicked="Go"
                        HorizontalOptions="Center"
                        SemanticProperties.Hint="Counts the number of times you click"
                        Text="GoToLogin" />

                    <Button
                        x:Name="newWindow"
                        Clicked="newWindow_Clicked"
                        HorizontalOptions="Center"
                        SemanticProperties.Hint="Counts the number of times you click"
                        Text="New Window" />


                </VerticalStackLayout>
            </ScrollView>
        </Grid>
        <ScrollView>

            <VerticalStackLayout
                Padding="30,0"
                IsVisible="{OnPlatform false,
                                       iOS=true,
                                       Android=true}"
                Spacing="25"
                VerticalOptions="Center">

                <Image
                    HeightRequest="200"
                    HorizontalOptions="Center"
                    SemanticProperties.Description="Cute dot net bot waving hi to you!"
                    Source="dotnet_bot.png" />

                <Label
                    FontSize="32"
                    HorizontalOptions="Center"
                    SemanticProperties.HeadingLevel="Level1"
                    Text="Hello, World!" />

                <Label
                    FontSize="18"
                    HorizontalOptions="Center"
                    SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                    SemanticProperties.HeadingLevel="Level2"
                    Text="Welcome to .NET Multi-platform App UI" />

                <Button
                    x:Name="CounterBtnx"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="Click me" />
                <Button
                    x:Name="GoTobtnx"
                    Clicked="Go"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="GoToLogin" />

                <Button
                    x:Name="newWindowx"
                    Clicked="newWindow_Clicked"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="New Window" />


            </VerticalStackLayout>
        </ScrollView>


    </VerticalStackLayout>
    <!--</ContentPage.Content>-->
</ContentPage>