<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="sidestep.quickey.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:sidestep.quickey.Controls"
    xmlns:viewmodel="clr-namespace:sidestep.quickey.ViewModel"
    Padding="10"
    x:DataType="viewmodel:MainPageViewModel">


    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Options">
            <!--<MenuFlyoutItem Command="{Binding ToggleFlyoutCommand}" Text="Change Vault" />-->
            <MenuFlyoutItem Text="Login" />
            <MenuFlyoutItem Command="{Binding LogoutCommand}" Text="Logout" />
            <MenuFlyoutItem Text="View Tenant" />
        </MenuBarItem>
        <MenuBarItem Text="View">
            <MenuFlyoutItem Text="Refresh" />
            <!--<MenuFlyoutSeparator />-->
            <MenuFlyoutItem Clicked="Toggle_Thene" Text="Change Theme" />
        </MenuBarItem>
        <MenuBarItem Text="Help">
            <MenuFlyoutItem Text="Report a bug" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>


    <Grid
        ColumnDefinitions=".25*,.37*,.37*"
        ColumnSpacing="10"
        IsVisible="{OnPlatform false,
                               WinUI=true,
                               MacCatalyst=true}"
        RowDefinitions="25,25, Auto, *"
        RowSpacing="5"
        VerticalOptions="Fill">


        <VerticalStackLayout Grid.Column="0">
            <Label Text="Type" />
            <Button Command="{Binding ToggleFlyoutCommand}" Text="Switch Vault" />




            <!--<Grid Grid.Row="1">
                <Frame>
                    <StackLayout RadioButtonGroup.GroupName="{Binding Category}" RadioButtonGroup.SelectedValue="{Binding Category}">

                        <RadioButton Content="Keys" Value="Keys" />
                        <RadioButton Content="Secrets" Value="Secrets" />
                        <RadioButton Content="Certificates" Value="Certificates" />

                        <Label x:Name="animalLabel">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="You have chosen: " />
                                    <Span Text="{Binding Category}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                    </StackLayout>
                </Frame>

            </Grid>-->


        </VerticalStackLayout>
        <HorizontalStackLayout Grid.Row="2" Grid.Column="1">

            <Label
                FontSize="18"
                HorizontalOptions="End"
                SemanticProperties.Description="Secrets and Keys"
                SemanticProperties.HeadingLevel="Level2"
                Text="{Binding Category}" />
            <Grid Grid.Row="1" Grid.Column="2">
                <BoxView Margin="0,31,0,0" VerticalOptions="Start" />
                <HorizontalStackLayout
                    RadioButtonGroup.GroupName="MenuCategories"
                    RadioButtonGroup.SelectedValue="{Binding Category}"
                    Spacing="20">
                    <BindableLayout.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Secrets</x:String>
                            <x:String>Certificates</x:String>
                            <x:String>Keys</x:String>
                        </x:Array>
                    </BindableLayout.ItemsSource>
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <RadioButton Content="{Binding .}" Value="{Binding .}">
                                <RadioButton.ControlTemplate>
                                    <ControlTemplate>
                                        <Grid RowDefinitions="30,4">
                                            <Label x:Name="TextLabel" Text="{TemplateBinding Content}" />
                                            <BoxView
                                                x:Name="Indicator"
                                                Grid.Row="1"
                                                Color="Transparent" />
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroupList>
                                                    <VisualStateGroup x:Name="CheckedStates">
                                                        <VisualState x:Name="Checked">
                                                            <VisualState.Setters>
                                                                <Setter TargetName="TextLabel" Property="Label.TextColor" Value="{StaticResource Primary}" />
                                                                <Setter TargetName="Indicator" Property="BoxView.Color" Value="{StaticResource Primary}" />
                                                            </VisualState.Setters>
                                                        </VisualState>

                                                        <VisualState x:Name="Unchecked">
                                                            <VisualState.Setters>
                                                                <Setter TargetName="TextLabel" Property="Label.TextColor" Value="White" />
                                                                <Setter TargetName="Indicator" Property="BoxView.Color" Value="Transparent" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateGroupList>
                                            </VisualStateManager.VisualStateGroups>
                                        </Grid>
                                    </ControlTemplate>

                                </RadioButton.ControlTemplate>
                            </RadioButton>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </HorizontalStackLayout>
            </Grid>
        </HorizontalStackLayout>

        <SearchBar
            Grid.Row="2"
            Grid.Column="3"
            FontSize="12"
            HeightRequest="35"
            MinimumHeightRequest="35"
            Placeholder="{Binding Source={x:Reference Category}, Path=Category, StringFormat='Filter {0:F2}'}" />
        <Line
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="1,50,0,0"
            BackgroundColor="SlateGray"
            HeightRequest="1" />
        <StackLayout
            Grid.Row="3"
            Grid.RowSpan="5"
            Grid.Column="1"
            Grid.ColumnSpan="3">

            <CollectionView
                Footer="Secrets"
                SelectionMode="None"
                VerticalOptions="StartAndExpand">
                <!--<CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>-->
                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>ETL Secret</x:String>
                        <x:String>Windows Password</x:String>
                        <x:String>SyncfusionKey</x:String>
                        <x:String>Apple Dev Key</x:String>
                        <x:String>Box API SAS Token</x:String>
                        <x:String>Facset API Key</x:String>
                        <x:String>Salesforce Creds</x:String>
                        <x:String>Prod Sql Login</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="4"
                            Padding="2"
                            HeightRequest="45">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width=".33" />
                                    <ColumnDefinition Width=".33" />

                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    LineBreakMode="TailTruncation"
                                    Text="{Binding .}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    FontAttributes="Italic"
                                    LineBreakMode="TailTruncation"
                                    Text="Expires in 10 days"
                                    VerticalOptions="End" />
                                <Line
                                    Grid.Row="0"
                                    Grid.RowSpan="3"
                                    Grid.Column="2"
                                    BackgroundColor="Red"
                                    Y1="100" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    FontAttributes="Italic"
                                    LineBreakMode="TailTruncation"
                                    Text="Edit"
                                    VerticalOptions="End" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>



            <StackLayout
                HorizontalOptions="End"
                Orientation="Horizontal"
                VerticalOptions="Center">

                <Button
                    x:Name="CounterBtn"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="Click me" />
                <Button
                    x:Name="GoTobtn"
                    Clicked="Go"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="GoToLogin" />
                <Button
                    x:Name="newWindow"
                    Clicked="newWindow_Clicked"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="New Window" />
            </StackLayout>
        </StackLayout>




    </Grid>
