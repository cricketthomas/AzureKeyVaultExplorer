<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="sidestep.quickey.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:sidestep.quickey.Controls">
    <!--<ContentPage.Content>-->

    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Clicked="OnCounterClicked" Text="Add" />
        <ToolbarItem Clicked="OnCounterClicked" Text="Save" />
    </ContentPage.ToolbarItems>-->


    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Vaults" />
        <MenuBarItem Text="User">
            <MenuFlyoutItem Text="Logout" />
            <MenuFlyoutItem Text="View Tenant" />
        </MenuBarItem>
        <MenuBarItem Text="View">
            <MenuFlyoutItem Text="Refresh" />
            <MenuFlyoutItem Text="Change Theme" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>


    <Grid
        ColumnDefinitions=".3*,.7*"
        IsVisible="{OnPlatform false,
                               WinUI=true,
                               MacCatalyst=true}"
        RowDefinitions="25,25, Auto, *"
        RowSpacing="5">


        <Label
            Grid.Row="0"
                 HeightRequest="25"
            MinimumHeightRequest="25"
            HorizontalOptions="Start"
            Text="Filter" />
        <Entry
            Grid.Row="1"
            ClearButtonVisibility="WhileEditing"
            FontSize="12"
            HeightRequest="35"
            MinimumHeightRequest="35"
            Placeholder="Search" />


        <ListView
            Grid.Row="2"
            Grid.RowSpan="2"
            Footer="vault list end"
            HorizontalScrollBarVisibility="Always"
            SelectionMode="None"
            SeparatorColor="Gray">
            <ListView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>apple-vault</x:String>
                    <x:String>windows-vault</x:String>
                    <x:String>prod-vault</x:String>
                    <x:String>dev-vault</x:String>
                    <x:String>android-vault</x:String>
                    <x:String>walledgarden-vault</x:String>
                    <x:String>mac-vault</x:String>
                    <x:String>apple-vault</x:String>
                    <x:String>windows-vault</x:String>
                    <x:String>prod-vault</x:String>
                    <x:String>dev-vault</x:String>
                    <x:String>android-vault</x:String>
                    <x:String>walledgarden-vault</x:String>
                    <x:String>mac-vault</x:String>
                    <x:String>android-vault</x:String>
                    <x:String>walledgarden-vault</x:String>
                    <x:String>mac-vault</x:String>
                    <x:String>android-vault</x:String>
                    <x:String>walledgarden-vault</x:String>
                    <x:String>mac-vault</x:String>
                    <x:String>android-vault</x:String>
                    <x:String>walledgarden-vault</x:String>
                    <x:String>walledgarden-vault</x:String>
                    <x:String>mac-vault</x:String>
                    <x:String>android-vault</x:String>
                    <x:String>walledgarden-vault</x:String>
                    <x:String>mac-vault</x:String>
                </x:Array>
            </ListView.ItemsSource>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="5">
                            <Label
                                FontSize="12"
                                Text="{Binding .}"
                                VerticalOptions="Center" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>




        <ScrollView
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1">

            <VerticalStackLayout
                Padding="30,0"
                Spacing="25"
                VerticalOptions="Center">

                <Image
                    HeightRequest="200"
                    HorizontalOptions="Center"
                    SemanticProperties.Description="Cute dot net bot waving hi to you!"
                    Source="dotnet_bot.png" />

                <Label
                    FontSize="32"
                    HorizontalOptions="Center"
                    SemanticProperties.HeadingLevel="Level1"
                    Text="Hello, World!" />

                <Label
                    FontSize="18"
                    HorizontalOptions="Center"
                    SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                    SemanticProperties.HeadingLevel="Level2"
                    Text="Welcome to .NET Multi-platform App UI" />

                <Button
                    x:Name="CounterBtn"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="Click me" />
                <Button
                    x:Name="GoTobtn"
                    Clicked="Go"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="GoToLogin" />

                <Button
                    x:Name="newWindow"
                    Clicked="newWindow_Clicked"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="New Window" />


            </VerticalStackLayout>
        </ScrollView>
    </Grid>
