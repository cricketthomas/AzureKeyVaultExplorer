<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="sidestep.quickey.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:sidestep.quickey.Controls"
    Padding="10"
    Shell.NavBarIsVisible="{OnPlatform false,
                                       MacCatalyst=false,
                                       WinUI=true}">


    <ContentPage.MenuBarItems>
        <MenuBarItem AbsoluteLayout.LayoutFlags="PositionProportional" Text="File">
            <MenuFlyoutItem Text="Login" />
            <MenuFlyoutItem Text="Logout" />
            <MenuFlyoutItem Text="View Tenant" />
        </MenuBarItem>
        <MenuBarItem Text="View">
            <MenuFlyoutItem Text="Refresh" />
            <!--<MenuFlyoutSeparator />-->
            <MenuFlyoutItem Clicked="Toggle_Thene" Text="Change Theme" />
        </MenuBarItem>
        <MenuBarItem Text="Help">
            <MenuFlyoutItem Text="Report a bug" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <Grid
        ColumnDefinitions=".25*,.37*,.37*"
        ColumnSpacing="10"
        IsVisible="{OnPlatform false,
                               WinUI=true,
                               MacCatalyst=true}"
        RowDefinitions="25,25, Auto, *"
        RowSpacing="5"
        VerticalOptions="Fill">

        <Label
            Grid.Row="0"
            HeightRequest="25"
            HorizontalOptions="Start"
            MinimumHeightRequest="25"
            Text="Explorer" />
        <Entry
            Grid.Row="1"
            ClearButtonVisibility="WhileEditing"
            FontSize="12"
            HeightRequest="35"
            MinimumHeightRequest="35"
            Placeholder="Find a Vault" />

        <ListView
            Grid.Row="2"
            Grid.RowSpan="2"
            Footer="vault list end"
            HorizontalScrollBarVisibility="Always"
            SelectionMode="None"
            SeparatorVisibility="Default"
            VerticalOptions="StartAndExpand">
            <ListView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>apple-vault</x:String>
                    <x:String>windows-vault</x:String>
                    <x:String>prod-vault</x:String>
                    <x:String>dev-vault</x:String>
                    <x:String>android-vault</x:String>
                    <x:String>walledgarden-vault</x:String>
                    <x:String>mac-vault</x:String>
                    <x:String>apple-vault</x:String>
                    <x:String>superlongnameazure key vault vault</x:String>
                    <x:String>mac-vault</x:String>
                    <x:String>android-vault</x:String>
                    <x:String>walledgarden-vault</x:String>
                    <x:String>mac-vault</x:String>
                    <x:String>android-vault</x:String>
                    <x:String>walledgarden-vault</x:String>
                    <x:String>walledgarden-vault</x:String>
                    <x:String>mac-vault</x:String>
                    <x:String>android-vault</x:String>
                    <x:String>walledgarden-vault</x:String>
                    <x:String>mac-vault</x:String>
                </x:Array>
            </ListView.ItemsSource>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Label
                                FontSize="13"
                                Text="{Binding .}"
                                VerticalOptions="Center" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Line
            Grid.Row="0"
            Grid.RowSpan="3"
            BackgroundColor="Red"
            HorizontalOptions="EndAndExpand"
            VerticalOptions="EndAndExpand" />
        <Label
            Grid.Row="0"
            Grid.Column="2"
            FontSize="18"
            HorizontalOptions="End"
            SemanticProperties.Description="Secrets and Keys"
            SemanticProperties.HeadingLevel="Level2"
            Text="Secrets and Keys" />
        <SearchBar
            Grid.Row="2"
            Grid.Column="3"
            FontSize="12"
            HeightRequest="35"
            MinimumHeightRequest="35"
            Placeholder="Filter" />
        <Line
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="1,50,0,0"
            BackgroundColor="SlateGray"
            HeightRequest="1" />
        <StackLayout
            Grid.Row="3"
            Grid.RowSpan="5"
            Grid.Column="1"
            Grid.ColumnSpan="3">

            <CollectionView
                Footer="Secrets"
                SelectionMode="None"
                VerticalOptions="StartAndExpand">
                <!--<CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>-->
                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>ETL Secret</x:String>
                        <x:String>Windows Password</x:String>
                        <x:String>SyncfusionKey</x:String>
                        <x:String>Apple Dev Key</x:String>
                        <x:String>Box API SAS Token</x:String>
                        <x:String>Facset API Key</x:String>
                        <x:String>Salesforce Creds</x:String>
                        <x:String>Prod Sql Login</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="4"
                            Padding="2"
                            HeightRequest="45">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width=".33" />
                                    <ColumnDefinition Width=".33" />

                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    LineBreakMode="TailTruncation"
                                    Text="{Binding .}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    FontAttributes="Italic"
                                    LineBreakMode="TailTruncation"
                                    Text="Expires in 10 days"
                                    VerticalOptions="End" />
                                <Line
                                    Grid.Row="0"
                                    Grid.RowSpan="3"
                                    Grid.Column="2"
                                    BackgroundColor="Red"
                                    Y1="100" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    FontAttributes="Italic"
                                    LineBreakMode="TailTruncation"
                                    Text="Edit"
                                    VerticalOptions="End" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>



            <StackLayout
                HorizontalOptions="End"
                Orientation="Horizontal"
                VerticalOptions="Center">

                <Button
                    x:Name="CounterBtn"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="Click me" />
                <Button
                    x:Name="GoTobtn"
                    Clicked="Go"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="GoToLogin" />
                <Button
                    x:Name="newWindow"
                    Clicked="newWindow_Clicked"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="New Window" />
            </StackLayout>
        </StackLayout>




    </Grid>
