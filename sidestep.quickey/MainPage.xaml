<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="sidestep.quickey.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:az="clr-namespace:Azure.ResourceManager.KeyVault;assembly=Azure.ResourceManager.KeyVault"
    xmlns:controls="clr-namespace:sidestep.quickey.Controls"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:sidestep.quickey.ViewModel"
    x:DataType="viewmodel:MainPageViewModel"
    BindingContext="{Binding Source={RelativeSource Self}, Path=MainPageViewModel}">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Options">
            <!--<MenuFlyoutItem Command="{Binding ToggleFlyoutCommand}" Text="Change Vault" />-->
            <MenuFlyoutItem Text="Login" />
            <MenuFlyoutItem Command="{Binding LogoutCommand}" Text="Logout" />
            <MenuFlyoutItem Text="View Tenant" />
        </MenuBarItem>
        <MenuBarItem Text="View">
            <MenuFlyoutItem Text="Refresh" />
            <!--<MenuFlyoutSeparator />-->
            <MenuFlyoutItem Clicked="Toggle_Thene" Text="Change Theme" />
        </MenuBarItem>
        <MenuBarItem Text="Help">
            <MenuFlyoutItem Text="Report a bug" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding AppearingCommand}" EventName="Appearing" />
        <!--<mct:EventToCommandBehavior Command="{Binding DisappearingCommand}" EventName="Disappearing" />-->
    </ContentPage.Behaviors>


    <toolkit:DockLayout>

        <!--  bottom bar  -->
        <Grid
            Padding="1"
            toolkit:DockLayout.DockPosition="Bottom"
            Background="{StaticResource Primary}"
            ColumnDefinitions="*,*,*,*,*"
            HeightRequest="25"
            HorizontalOptions="FillAndExpand"
            RowDefinitions="*"
            VerticalOptions="End">

            <Label
                Grid.Column="0"
                FontSize="12"
                Text="new window"
                VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <ClickGestureRecognizer Clicked="newWindow_Clicked" />
                    <TapGestureRecognizer Tapped="newWindow_Clicked" />
                </Label.GestureRecognizers>
            </Label>

            <Label
                Grid.Column="1"
                FontSize="12"
                Text="open"
                VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <ClickGestureRecognizer Command="{Binding ToggleFlyoutCommand}" />
                    <TapGestureRecognizer Command="{Binding ToggleFlyoutCommand}" />
                </Label.GestureRecognizers>
            </Label>
            <!--<Label
                x:Name="CounterBtn"
                Grid.Column="2"
                HorizontalOptions="Center"
                SemanticProperties.Hint="Counts the number of times you click"
                Text="click me"
                VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <ClickGestureRecognizer Clicked="OnCounterClicked" />
                    <TapGestureRecognizer Tapped="OnCounterClicked" />
                </Label.GestureRecognizers>
            </Label>-->

            <Label
                x:Name="GoToLogin"
                Grid.Column="2"
                FontSize="12"
                HorizontalOptions="Center"
                Text="Login"
                VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <ClickGestureRecognizer Clicked="Go" />
                    <TapGestureRecognizer Tapped="Go" />
                </Label.GestureRecognizers>
            </Label>
            <Label
                Grid.Column="3"
                Grid.ColumnSpan="2"
                FontSize="12"
                HorizontalOptions="EndAndExpand"
                Text="{Binding Username}"
                TextColor="{StaticResource OffWhite}"
                VerticalOptions="Center" />

        </Grid>

        <!--  sidebar  -->

        <Grid
            toolkit:DockLayout.DockPosition="Left"
            ColumnDefinitions="200"
            HorizontalOptions="FillAndExpand"
            RowDefinitions="Auto,Auto, *"
            VerticalOptions="StartAndExpand">

            <VerticalStackLayout Grid.Row="0">
                <Label Text="Explorer" />
                <Entry
                    x:Name="VaultListFilterEntry"
                    ClearButtonVisibility="WhileEditing"
                    FontSize="12"
                    HeightRequest="30"
                    MinimumHeightRequest="30"
                    Placeholder="Find a Vault"
                    Text="{Binding VaultListFilter}"
                    TextChanged="VaultListFilterEntry_TextChanged" />
            </VerticalStackLayout>
            <ListView
                Grid.Row="2"
                Grid.RowSpan="2"
                Footer="vault list end"
                HorizontalScrollBarVisibility="Always"
                ItemsSource="{Binding VaultList}"
                SelectedItem="{Binding SelectedVault}"
                SelectionMode="Single"
                SeparatorVisibility="Default">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell x:DataType="az:KeyVaultData">
                            <Grid Padding="10">
                                <Label
                                    FontSize="13"
                                    Text="{Binding Name}"
                                    VerticalOptions="Center" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>

        <!--  center  -->


        <Grid
            toolkit:DockLayout.DockPosition="None"
            ColumnDefinitions="*,*,*,*,*"
            RowDefinitions="*,Auto, Auto, 0*"
            RowSpacing="4"
            VerticalOptions="StartAndExpand">

            <HorizontalStackLayout
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2">
                <controls:SegmentedTab SelectedValue="{Binding Category}">
                    <controls:SegmentedTab.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Secrets</x:String>
                            <x:String>Certificates</x:String>
                            <x:String>Keys</x:String>
                        </x:Array>
                    </controls:SegmentedTab.ItemsSource>
                </controls:SegmentedTab>
            </HorizontalStackLayout>

            <SearchBar
                Grid.Row="2"
                Grid.Column="3"
                Grid.ColumnSpan="2"
                FontSize="12"
                HeightRequest="35"
                MinimumHeightRequest="35"
                Placeholder="{Binding Category, StringFormat='Filter {0:F2}'}" />


            <CollectionView
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="6"
                Footer="Secrets"
                SelectionMode="None"
                VerticalOptions="Center"
                VerticalScrollBarVisibility="Always">
                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>ETL Secret</x:String>
                        <x:String>Windows Password</x:String>
                        <x:String>SyncfusionKey</x:String>
                        <x:String>Apple Dev Key</x:String>
                        <x:String>Box API SAS Token</x:String>
                        <x:String>Facset API Key</x:String>
                        <x:String>Salesforce Creds</x:String>
                        <x:String>Prod Sql Login</x:String>
                        <x:String>Box API SAS Token</x:String>
                        <x:String>Facset API Key</x:String>
                        <x:String>Salesforce Creds</x:String>
                        <x:String>Prod Sql Login</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="2"
                            Background="{AppThemeBinding Dark={StaticResource Black750},
                                                         Light=White}"
                            HeightRequest="45"
                            Stroke="White"
                            StrokeShape="RoundRectangle 5"
                            StrokeThickness=".25">
                            <Border.Shadow>
                                <Shadow
                                    Brush="Gray"
                                    Opacity=".25"
                                    Offset="10,.50" />
                            </Border.Shadow>
                            <Grid ColumnDefinitions=".10*, Auto,Auto" RowDefinitions="*,*">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    LineBreakMode="TailTruncation"
                                    Text="{Binding .}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontAttributes="Italic"
                                    LineBreakMode="TailTruncation"
                                    Text="Expires in 10 days" />
                                <ImageButton
                                    Grid.Row="0"
                                    Grid.RowSpan="4"
                                    Grid.Column="1"
                                    SemanticProperties.Hint="View Details"
                                    Source="right_chevron.png"
                                    VerticalOptions="StartAndExpand">

                                    <ImageButton.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="Red" />
                                    </ImageButton.Behaviors>
                                </ImageButton>



                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>


    </toolkit:DockLayout>






