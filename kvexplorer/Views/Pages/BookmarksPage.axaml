<UserControl
    x:Class="kvexplorer.Views.Pages.BookmarksPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:vm="using:kvexplorer.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:BookmarksPageViewModel />
    </Design.DataContext>
    <StackPanel>

        <ScrollViewer>
            <StackPanel Margin="10,5" Orientation="Vertical">
                <ui:CommandBar Height="40" DefaultLabelPosition="Right">
                    <ui:CommandBar.PrimaryCommands>
                        <ui:CommandBarButton
                            Height="40"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            IconSource="Open"
                            Label="Open"
                            ToolTip.Tip="Open in Azure Portal" />
                        <ui:CommandBarButton
                            Height="40"
                            IconSource="Copy"
                            Label="Copy" />
                        <ui:CommandBarButton
                            Height="40"
                            CommandParameter="Key"
                            IconSource="Download"
                            Label="Download Public Key" />
                        <ui:CommandBarButton
                            Height="40"
                            CommandParameter="Cert"
                            IconSource="Download"
                            Label="Download CER">

                            <ui:CommandBarButton.Styles>
                                <Styles>

                                    <Style Selector="ui|CommandBarButton /template/ TextBlock#TextLabel">

                                        <Setter Property="Background" Value="Red" />
										<Setter Property="HorizontalAlignment" Value="Center" />

									</Style>

                                </Styles>

                            </ui:CommandBarButton.Styles>
                        </ui:CommandBarButton>


                    </ui:CommandBar.PrimaryCommands>
                </ui:CommandBar>
                <TextBlock HorizontalAlignment="Left" Theme="{StaticResource SubtitleTextBlockStyle}">Subscriptions</TextBlock>
                <Button
                    HorizontalAlignment="Right"
                    Click="Button_Click"
                    Content="New Workspace" />
                <TextBlock TextWrapping="Wrap">
                    Select which subscriptions to be show in the left sidebar.<LineBreak />
                </TextBlock>
                <ItemsControl>

                    <WrapPanel>
                        <Border
                            Width="100"
                            Height="100"
                            Margin="10"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="5" />
                        <Border
                            Width="100"
                            Height="100"
                            Margin="10"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="5" />
                        <Border
                            Width="100"
                            Height="100"
                            Margin="10"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="5" />
                        <Border
                            Width="100"
                            Height="100"
                            Margin="10"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="5" />
                    </WrapPanel>

                </ItemsControl>

            </StackPanel>

        </ScrollViewer>
    </StackPanel>

</UserControl>
