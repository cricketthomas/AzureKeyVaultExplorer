<UserControl
    x:Class="kvexplorer.Views.Pages.BookmarksPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:vm="using:kvexplorer.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:BookmarksPageViewModel />
    </Design.DataContext>
    <StackPanel>

        <ScrollViewer>
            <StackPanel Margin="10,5" Orientation="Vertical">

                <TextBlock HorizontalAlignment="Left" Theme="{StaticResource SubtitleTextBlockStyle}">Subscriptions</TextBlock>
                <Button
                    HorizontalAlignment="Right"
                    Click="Button_Click"
                    Content="New Workspace" />
                <TextBlock TextWrapping="Wrap">
                    Select which subscriptions to be show in the left sidebar.<LineBreak />
                </TextBlock>
                <ItemsControl>

                    <WrapPanel>
                        <Border
                            Width="100"
                            Height="100"
                            Margin="10"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="5" />
                        <Border
                            Width="100"
                            Height="100"
                            Margin="10"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="5" />
                        <Border
                            Width="100"
                            Height="100"
                            Margin="10"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="5" />
                        <Border
                            Width="100"
                            Height="100"
                            Margin="10"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="5" />
                    </WrapPanel>

                </ItemsControl>

            </StackPanel>

        </ScrollViewer>
    </StackPanel>

</UserControl>
